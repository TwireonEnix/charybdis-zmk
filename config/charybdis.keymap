#include <dt-bindings/zmk/mouse.h>
#include <behaviors/mouse_keys.dtsi>
#include <behaviors.dtsi>
#include <dt-bindings/zmk/bt.h>
#include <dt-bindings/zmk/keys.h>
#include <dt-bindings/zmk/pointing.h>

/ {
    behaviors {
        macros {
        jsfn: jsfn {
            compatible = "zmk,behavior-macro";
            #binding-cells = <0>;
            bindings = <&kp EQUAL &kp GREATER_THAN &kp SPACE &kp LEFT_BRACE &kp RIGHT_BRACE &kp LEFT>;
        };

        upDirectory: upDirectory {
            compatible = "zmk,behavior-macro";
            #binding-cells = <0>;
            bindings = <&kp PERIOD &kp PERIOD &kp SLASH>;
        };

        toWin: toWin {
            compatible = "zmk,behavior-macro";
            #binding-cells = <0>;
            bindings = <&bt BT_SEL 1 &to 1>;
        };

        toMac: toMac {
            compatible = "zmk,behavior-macro";
            #binding-cells = <0>;
            bindings = <&bt BT_SEL 0 &to 0>;
        };
    };

    hm_c: hm_c { 
        hold-trigger-key-positions = <16 17 18 19 28 29 30 31 32 33 34>; 
        compatible = "zmk,behavior-hold-tap";
      #binding-cells = <2>;
      bindings = <&kp>, <&kp>;
      tapping-term-ms = <185>;
      quick-tap-ms = <135>;
      flavor = "balanced";
      require-prior-idle-ms = <125>;
      hold-trigger-on-release;
    };

    hm_r: hm_r { 
      compatible = "zmk,behavior-hold-tap";
      #binding-cells = <2>;
      bindings = <&kp>, <&kp>;
      tapping-term-ms = <185>;
      quick-tap-ms = <135>;
      flavor = "balanced";
      hold-trigger-on-release;
      require-prior-idle-ms = <125>;
        hold-trigger-key-positions = <15 17 18 19 28 29 30 31 32 33 34>; 
        };

    hm_s: hm_s {
      compatible = "zmk,behavior-hold-tap";
      #binding-cells = <2>;
      bindings = <&kp>, <&kp>;
      tapping-term-ms = <185>;
      quick-tap-ms = <135>;
      flavor = "balanced";
      hold-trigger-on-release;
      require-prior-idle-ms = <125>;
      hold-trigger-key-positions = <15 16 18 19 28 29 30 31 32 33 34>; 
    };

    hm_t: hm_t { 
      compatible = "zmk,behavior-hold-tap";
      #binding-cells = <2>;
      bindings = <&kp>, <&kp>;
      tapping-term-ms = <185>;
      quick-tap-ms = <135>;
      flavor = "balanced";
      hold-trigger-on-release;
      require-prior-idle-ms = <125>;
      hold-trigger-key-positions = <15 16 17 19 28 29 30 31 32 33 34>; 
      };

    hm_n: hm_n { 
      compatible = "zmk,behavior-hold-tap";
      #binding-cells = <2>;
      bindings = <&kp>, <&kp>;
      tapping-term-ms = <185>;
      quick-tap-ms = <135>;
      flavor = "balanced";
      hold-trigger-on-release;
      require-prior-idle-ms = <125>;
      hold-trigger-key-positions = <24 25 26 35 36 37 38 39 40 41>; 
      };

    hm_e: hm_e { 
      compatible = "zmk,behavior-hold-tap";
      #binding-cells = <2>;
      bindings = <&kp>, <&kp>;
      tapping-term-ms = <185>;
      quick-tap-ms = <135>;
      flavor = "balanced";
      hold-trigger-on-release;
      require-prior-idle-ms = <125>;
      hold-trigger-key-positions = <23 25 26 35 36 37 38 39 40 41>; 
      };

    hm_i: hm_i {
      compatible = "zmk,behavior-hold-tap";
      #binding-cells = <2>;
      bindings = <&kp>, <&kp>;
      tapping-term-ms = <185>;
      quick-tap-ms = <135>;
      flavor = "balanced";
      hold-trigger-on-release;
      require-prior-idle-ms = <125>;
       hold-trigger-key-positions = <23 24 26 35 36 37 38 39 40 41>; 
       };

    hm_a_r: hm_a_r { 
      compatible = "zmk,behavior-hold-tap";
      #binding-cells = <2>;
      bindings = <&kp>, <&kp>;
      tapping-term-ms = <185>;
      quick-tap-ms = <135>;
      flavor = "balanced";
      hold-trigger-on-release;
      require-prior-idle-ms = <125>;
      hold-trigger-key-positions = <23 24 25 35 36 37 38 39 40 41>;
       };

    /* ---------- Safe layer toggles ---------- */
    to_fast: to_fast {
      compatible = "zmk,behavior-hold-tap";
      #binding-cells = <2>;
      bindings = <&mo>, <&kp>;
      tapping-term-ms = <260>;
      flavor = "tap-preferred";
      hold-trigger-on-release;
    };

    mt_fast: mt_fast {
    compatible = "zmk,behavior-hold-tap";
    #binding-cells = <2>;
    bindings = <&kp>, <&kp>;
    tapping-term-ms = <175>;
    quick-tap-ms = <130>;
    require-prior-idle-ms = <125>;
    flavor = "balanced";
    hold-trigger-on-release;
  };

        toMacModTap: toMacModTap {
            compatible = "zmk,behavior-hold-tap";
            bindings = <&toMac>, <&kp>;

            #binding-cells = <2>;
            tapping-term-ms = <300>;
            flavor = "tap-preferred";
        };

        toWinModTap: toWinModTap {
            compatible = "zmk,behavior-hold-tap";
            bindings = <&toWin>, <&kp>;

            #binding-cells = <2>;
            tapping-term-ms = <300>;
            flavor = "tap-preferred"; 
        };
    };


    keymap {
        compatible = "zmk,keymap";

        MAC {
            display-name = "MAC";
            bindings = <
            &kp LC(UP_ARROW)       &kp Q                &kp L            &kp Y            &kp P              &kp B            &kp Z         &kp F              &kp O            &kp U            &kp SLASH             &kp LG(SPACE)
&kp RIGHT_ALT          &hm_c LEFT_CONTROL C  &hm_r LEFT_ALT R  &hm_s LEFT_GUI S  &hm_t LEFT_SHIFT T  &kp G            &kp M         &hm_n LEFT_SHIFT N  &hm_e LEFT_GUI E  &hm_i LEFT_ALT I  &hm_a_r LEFT_CONTROL A   &kp SINGLE_QUOTE
&toWinModTap 0 ESCAPE  &kp W                &mt_fast LG(X) J      &mt_fast LG(C) V      &mt_fast LG(V) D        &mt_fast LG(Z) K            &kp X         &kp H              &kp COLON        &kp COMMA        &kp PERIOD            &mt LG(Q) DELETE
                                                             &to_fast 3 TAB        &to_fast 7 SPACE        &kp BACKSPACE    &to_fast 2 ESCAPE  &to_fast 6 ENTER
            >;
        };

        WIN {
            display-name = "WIN";
            bindings = <
&kp LG(TAB)             &kp Q            &kp L            &kp Y                &kp P              &kp B            &kp Z         &kp F              &kp O                &kp U            &kp SLASH             &kp LA(SPACE)
&kp RIGHT_ALT          &hml LEFT_GUI C  &hml LEFT_ALT R  &hml LEFT_CONTROL S  &hml LEFT_SHIFT T  &kp G            &kp M         &hmr LEFT_SHIFT N  &hmr LEFT_CONTROL E  &hmr LEFT_ALT I  &hmr LEFT_GUI A          &kp SINGLE_QUOTE
&toLayerModTap 7 ENTER  &kp W            &kp J            &mt LC(C) V          &mt LC(V) D        &kp K            &kp X         &kp H              &kp COLON            &kp COMMA        &kp PERIOD               &mt LA(F4) DELETE
                                                          &lt 5 TAB            &lt 7 SPACE        &kp BACKSPACE    &lt 4 ESCAPE  &lt 6 ENTER
            >;
        };

        NUM-MAC {
            display-name = "NUMB_M";
            bindings = <
&none     &none         &kp NUMBER_7            &kp NUMBER_8                &kp NUMBER_9              &none            &kp F12  &kp F7              &kp F8                &kp F9            &none         &none
&kp RALT  &kp LEFT_GUI  &hm_r LEFT_ALT NUMBER_4  &hm_s LEFT_CONTROL NUMBER_5  &hm_t LEFT_SHIFT NUMBER_6  &none            &kp F11  &hm_n LEFT_SHIFT F4  &hm_e LEFT_CONTROL F5  &hm_i LEFT_ALT F6  &kp LEFT_GUI  &kp RALT
&none     &kp COMMA     &kp NUMBER_1            &kp NUMBER_2                &kp NUMBER_3              &none            &kp F10  &kp F1              &kp F2                &kp F3            &kp DOT       &kp DELETE
                                                &kp NUMBER_0                &kp SPACE                 &kp BACKSPACE    &trans   &kp ENTER
            >;
        };

        NAV-MAC {
            display-name = "NAV_M";
            bindings = <
&none                 &kp LG(LEFT_ARROW)    &kp LG(RIGHT_ARROW)  &kp C_VOL_DN      &kp C_VOLUME_UP   &none                       &kp LA(LC(LG(LEFT)))    &kp INSERT         &kp PAGE_DOWN   &kp PAGE_UP   &kp LC(LA(C))          &kp LA(LC(LG(RIGHT)))
&kp RALT              &kp LEFT_CONTROL      &kp LALT             &kp LEFT_GUI      &kp LSHFT         &kp LG(LS(LC(NUMBER_4)))    &kp LA(LC(LEFT_ARROW))  &kp LEFT_ARROW     &kp DOWN_ARROW  &kp UP_ARROW  &kp RIGHT              &kp LC(LA(RIGHT))
&kp C_BRIGHTNESS_DEC  &kp C_BRIGHTNESS_INC  &kp C_PREVIOUS       &kp C_PLAY_PAUSE  &kp C_AC_FORWARD  &kp LS(TAB)                 &none                   &kp LC(LA(ENTER))  &kp HOME        &kp END       &kp LC(LA(BACKSPACE))  &trans
                                                                 &trans            &none             &none                       &caps_word              &kp ENTER          
            >;
        };

        NUM-WIN {
            display-name = "NUMB";
            bindings = <
&none     &none         &kp NUMBER_7            &kp NUMBER_8                &kp NUMBER_9              &none            &kp F12  &kp F7              &kp F8                &kp F9            &none         &none
&kp RALT  &kp LEFT_GUI  &hm_r LEFT_ALT NUMBER_4  &hm_s LEFT_CONTROL NUMBER_5  &hm_t LEFT_SHIFT NUMBER_6  &none            &kp F11  &hm_n LEFT_SHIFT F4  &hm_e LEFT_CONTROL F5  &hm_i LEFT_ALT F6  &kp LEFT_GUI  &kp RALT
&none     &kp COMMA     &kp NUMBER_1            &kp NUMBER_2                &kp NUMBER_3              &none            &kp F10  &kp F1              &kp F2                &kp F3            &kp DOT       &kp DELETE
                                                &kp NUMBER_0                &kp SPACE                 &kp BACKSPACE    &trans   &kp ENTER
            >;
        };

        NAV-WIN {
            display-name = "NAV";
            bindings = <
&none     &kp LG(LEFT_ARROW)  &kp LG(RIGHT_ARROW)  &kp C_VOL_DN      &kp C_VOLUME_UP   &none            &kp LS(LG(LEFT))    &kp INSERT        &kp PAGE_DOWN   &kp PAGE_UP   &none                   &kp LG(LS(RIGHT))
&kp RALT  &kp LEFT_GUI        &kp LALT             &kp LCTRL         &kp LSHFT         &kp LG(LS(S))    &kp LG(LEFT_ARROW)  &kp LEFT_ARROW    &kp DOWN_ARROW  &kp UP_ARROW  &kp RIGHT               &kp LG(RIGHT)
&none     &none               &kp C_PREVIOUS       &kp C_PLAY_PAUSE  &kp C_AC_FORWARD  &kp LS(TAB)      &none               &kp LG(UP_ARROW)  &kp HOME        &kp END       &kp LG(LS(DOWN_ARROW))  &trans
                                                   &trans            &none             &none            &caps_word          &kp ENTER
            >;
        };

        SYMBOLS {
            display-name = "SYMB";
            bindings = <
&kp LEFT_GUI                       &kp RA(SLASH)  &kp ASTRK        &kp MINUS             &kp PLUS               &kp AT           &kp PIPE   &kp AMPERSAND   &kp PERCENT       &kp CARET   &upDirectory       &kp LEFT_GUI
&kp LSHFT                          &kp TILDE      &kp QUESTION     &kp LEFT_PARENTHESIS  &kp RIGHT_PARENTHESIS  &kp EQUAL        &kp GRAVE  &kp LEFT_BRACE  &kp RIGHT_BRACE   &kp DOLLAR  &kp DOUBLE_QUOTES  &kp LEFT_SHIFT
&mt RA(NUMBER_1) RA(LS(NUMBER_1))  &kp BACKSLASH  &kp EXCLAMATION  &kp LEFT_BRACKET      &kp RIGHT_BRACKET      &kp UNDERSCORE        &kp HASH   &kp LESS_THAN   &kp GREATER_THAN  &kp SEMI    &kp RA(N5)         &kp DELETE
                                                                   &jsfn                 &kp SPACE              &kp BACKSPACE    &trans     &trans 
            >;
        };

        MOUSE {
            display-name = "MOUSE";
            bindings = <
&to 1   &trans           &trans     &msc SCRL_UP  &msc SCRL_DOWN  &trans            &trans  &trans          &trans          &trans        &trans            &bt BT_CLR_ALL
&trans  &msc SCRL_RIGHT  &mkp MCLK  &mkp RCLK     &mkp LCLK       &msc SCRL_LEFT    &trans  &kp LSHFT       &kp LEFT_GUI    &kp LALT      &kp LEFT_CONTROL  &trans
&trans  &trans           &trans     &mkp MB4      &mkp MB5        &trans            &trans  &kp LEFT_ARROW  &kp DOWN_ARROW  &kp UP_ARROW  &kp RIGHT_ARROW   &bt BT_NXT
                                    &trans        &trans          &trans            &trans  &trans
            >;
        };
    };
};
